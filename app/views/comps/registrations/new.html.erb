<h2>企業新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "comps/shared/error_messages", resource: resource %>

  <%# 企業新規登録フォーム %>
  <div class="form-wrap">

    <div class="field">
      <%= f.label :法人名・組織名等 %><br />
      <%= f.text_field :name, class:"", id:"", placeholder:"例) 株式会社　見本商事", maxlength:"45",autofocus: true, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :フリガナ %><br />
      <%= f.text_field :kana, class:"", id:"", placeholder:"例) ミホンショウジ", maxlength:"45", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :部署・担当等 %><br />
      <%= f.text_field :group, class:"", id:"" ,placeholder:"例) 人事部採用係", maxlength:"30", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, class:"", id:"", autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, class:"", id:"", placeholder:"8文字以上", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード再入力 %><br />
      <%= f.password_field :password_confirmation, class:"", id:"", placeholder:"もう一度同じパスワードを入力", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "無料新規登録", class:"" %>
    </div>

  </div>


<% end %>

<%= render "comps/shared/links" %>
